---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

const posts: CollectionEntry<'thoughts'>[] = (await getCollection('thoughts'))
  .sort((a: CollectionEntry<'thoughts'>, b: CollectionEntry<'thoughts'>) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout title="Thoughts | 1036 days" description="All my thoughts and writings">
  <div class="space-y-8">
    <header class="text-center py-4">
      <h1 class="text-4xl md:text-5xl font-extrabold text-slate-900 mb-3">
        Thoughts
      </h1>
      <p class="text-lg text-slate-600">
        Ideas, learnings, and reflections
      </p>
    </header>

    {posts.length > 0 ? (
      <div class="grid gap-4">
        {posts.map((post: CollectionEntry<'thoughts'>) => (
          <a href={`/thoughts/${post.id}`} class="group block bg-white rounded-xl p-6 border border-slate-200 hover:border-indigo-300 hover:shadow-lg hover:shadow-indigo-100 transition-all duration-300">
            <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-3">
              <div class="flex-1">
                <h2 class="text-xl font-bold text-slate-900 group-hover:text-indigo-600 transition-colors mb-2">
                  {post.data.title}
                </h2>
                <p class="text-slate-600">{post.data.description}</p>
                {post.data.tags && (
                  <div class="flex flex-wrap gap-2 mt-3">
                    {post.data.tags.map((tag: string) => (
                      <span class="px-2 py-0.5 bg-slate-100 text-slate-500 rounded-full text-xs font-medium">
                        {tag}
                      </span>
                    ))}
                  </div>
                )}
              </div>
              <div class="flex items-center gap-4 text-sm text-slate-500 shrink-0 md:text-right">
                <time datetime={post.data.pubDate.toISOString()}>
                  {post.data.pubDate.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric'
                  })}
                </time>
                {post.data.author && (
                  <span class="hidden md:inline">by {post.data.author}</span>
                )}
              </div>
            </div>
          </a>
        ))}
      </div>
    ) : (
      <div class="text-center py-16 bg-white rounded-2xl border border-slate-200">
        <div class="text-6xl mb-4">ðŸ’­</div>
        <h2 class="text-2xl font-bold text-slate-900 mb-2">No thoughts yet</h2>
        <p class="text-slate-600">Check back soon for new content.</p>
      </div>
    )}
  </div>
</BaseLayout>
