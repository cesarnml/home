---
interface Props {
  title: string;
  subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<section class="relative text-center py-16 overflow-hidden rounded-3xl">
  <canvas id="hero-canvas" class="absolute inset-0 w-full h-full"></canvas>
  <div class="relative z-10">
    <h1 class="text-5xl md:text-6xl font-extrabold bg-linear-to-r from-cyan-400 via-violet-400 to-fuchsia-400 bg-clip-text text-transparent mb-4">
      {title}
    </h1>
    <p class="text-xl font-medium bg-linear-to-r from-slate-300 via-slate-400 to-slate-300 bg-clip-text text-transparent max-w-2xl mx-auto">
      {subtitle}
    </p>
  </div>
</section>

<script>
  const canvas = document.getElementById('hero-canvas') as HTMLCanvasElement;
  const ctx = canvas.getContext('2d')!;
  
  let width: number;
  let height: number;
  let mouseX = 0;
  let mouseY = 0;
  let particles: Particle[] = [];
  
  interface Particle {
    x: number;
    y: number;
    baseX: number;
    baseY: number;
    size: number;
    color: string;
    speed: number;
    angle: number;
    wobble: number;
    wobbleSpeed: number;
  }
  
  const colors = [
    'rgba(34, 211, 238, 0.6)',   // cyan
    'rgba(167, 139, 250, 0.6)',  // violet
    'rgba(232, 121, 249, 0.5)',  // fuchsia
    'rgba(56, 189, 248, 0.5)',   // sky
    'rgba(192, 132, 252, 0.5)',  // purple
  ];
  
  function resize() {
    const rect = canvas.parentElement!.getBoundingClientRect();
    width = rect.width;
    height = rect.height;
    canvas.width = width;
    canvas.height = height;
    initParticles();
  }
  
  function initParticles() {
    particles = [];
    const count = Math.floor((width * height) / 8000);
    
    for (let i = 0; i < count; i++) {
      const x = Math.random() * width;
      const y = Math.random() * height;
      particles.push({
        x,
        y,
        baseX: x,
        baseY: y,
        size: Math.random() * 4 + 2,
        color: colors[Math.floor(Math.random() * colors.length)],
        speed: Math.random() * 0.5 + 0.2,
        angle: Math.random() * Math.PI * 2,
        wobble: Math.random() * Math.PI * 2,
        wobbleSpeed: Math.random() * 0.02 + 0.01,
      });
    }
  }
  
  function animate() {
    ctx.clearRect(0, 0, width, height);
    
    particles.forEach((p) => {
      // Gentle floating motion
      p.wobble += p.wobbleSpeed;
      p.angle += p.speed * 0.01;
      
      // Base floating position
      const floatX = p.baseX + Math.sin(p.wobble) * 20;
      const floatY = p.baseY + Math.cos(p.wobble * 0.8) * 15;
      
      // Mouse interaction - particles gently move away
      const dx = mouseX - floatX;
      const dy = mouseY - floatY;
      const dist = Math.sqrt(dx * dx + dy * dy);
      const maxDist = 150;
      
      if (dist < maxDist) {
        const force = (1 - dist / maxDist) * 40;
        p.x = floatX - (dx / dist) * force;
        p.y = floatY - (dy / dist) * force;
      } else {
        // Smooth return to floating position
        p.x += (floatX - p.x) * 0.05;
        p.y += (floatY - p.y) * 0.05;
      }
      
      // Draw particle with glow
      ctx.beginPath();
      ctx.arc(p.x, p.y, p.size, 0, Math.PI * 2);
      ctx.fillStyle = p.color;
      ctx.fill();
      
      // Soft glow effect
      ctx.beginPath();
      ctx.arc(p.x, p.y, p.size * 2, 0, Math.PI * 2);
      const gradient = ctx.createRadialGradient(p.x, p.y, 0, p.x, p.y, p.size * 2);
      gradient.addColorStop(0, p.color.replace('0.', '0.3'));
      gradient.addColorStop(1, 'transparent');
      ctx.fillStyle = gradient;
      ctx.fill();
    });
    
    // Draw connections between nearby particles
    ctx.strokeStyle = 'rgba(167, 139, 250, 0.15)';
    ctx.lineWidth = 1;
    
    for (let i = 0; i < particles.length; i++) {
      for (let j = i + 1; j < particles.length; j++) {
        const dx = particles[i].x - particles[j].x;
        const dy = particles[i].y - particles[j].y;
        const dist = Math.sqrt(dx * dx + dy * dy);
        
        if (dist < 100) {
          ctx.beginPath();
          ctx.moveTo(particles[i].x, particles[i].y);
          ctx.lineTo(particles[j].x, particles[j].y);
          ctx.globalAlpha = 1 - dist / 100;
          ctx.stroke();
          ctx.globalAlpha = 1;
        }
      }
    }
    
    requestAnimationFrame(animate);
  }
  
  // Event listeners
  canvas.parentElement!.addEventListener('mousemove', (e) => {
    const rect = canvas.getBoundingClientRect();
    mouseX = e.clientX - rect.left;
    mouseY = e.clientY - rect.top;
  });
  
  canvas.parentElement!.addEventListener('mouseleave', () => {
    mouseX = -1000;
    mouseY = -1000;
  });
  
  window.addEventListener('resize', resize);
  
  // Initialize
  resize();
  animate();
</script>
