---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Welcome to my blog" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=Space+Grotesk:wght@300..700&display=swap" rel="stylesheet" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col bg-linear-to-br from-slate-900 via-slate-800 to-indigo-950 text-slate-100 antialiased">
    <nav class="sticky top-0 z-50 backdrop-blur-md bg-slate-900/80 border-b border-slate-700/50">
      <div class="max-w-4xl mx-auto px-6 py-4 flex items-center justify-between">
        <a href="/" class="text-xl font-bold bg-linear-to-r from-cyan-400 via-violet-400 to-fuchsia-400 bg-clip-text text-transparent hover:from-cyan-300 hover:via-violet-300 hover:to-fuchsia-300 transition-all">
          1036 days
        </a>
        <div class="flex gap-6">
          <a href="/" class="text-slate-400 hover:text-cyan-400 font-medium transition-colors">Home</a>
          <a href="/thoughts" class="text-slate-400 hover:text-cyan-400 font-medium transition-colors">Thoughts</a>
        </div>
      </div>
    </nav>
    <main class="flex-1 max-w-4xl w-full mx-auto px-6 py-12">
      <slot />
    </main>
    <footer class="mt-auto border-t border-slate-700/50 bg-slate-900/50">
      <div class="max-w-4xl mx-auto px-6 py-8 text-center text-slate-500 text-sm">
        <p>&copy; {new Date().getFullYear()} - Built with Astro, Tailwind, AI & â˜•</p>
      </div>
    </footer>
  </body>
</html>
